<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/markerUserNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/nickname_background"
        android:gravity="center"
        android:padding="6dp"
        android:text="mvnh"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintBottom_toTopOf="@+id/markerUserPfp"
        app:layout_constraintEnd_toEndOf="@+id/markerUserPfp"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/markerUserPfp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/markerUserPfp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="4dp"
        android:src="@drawable/fuckthisworldcat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>